# Token del bot (NO subir .env al repo)
TELEGRAM_BOT_TOKEN=tu_token_de_telegram

# Chat ID opcional para notificaciones administrativas
ADMIN_CHAT_ID=tu_chat_id

# Webhook (en Railway pon la URL que te da el servicio)
# Ejemplo: https://tu-app.up.railway.app
WEBHOOK_URL=https://tu-app.up.railway.app

# Ruta del webhook en tu servidor (puedes dejar /webhook o poner /tg/mi-secreto)
WEBHOOK_PATH=/webhook

# Puerto para escuchar (Railway asigna un puerto normalmente en la variable PORT)
PORT=8000

# Otros
TESORERO_URL=https://tu-app.railway.app
